pipeline{
    agent any
    stages{
        stage('STAGE 1'){
            steps{
                echo "this is stage 1"
                sh 'exit 1'
            }
        }
        stage('SECOND 2'){
             steps{
                echo "this is stage 2 "
             }
        }

  stage('SECOND 3'){
             steps{
                echo "this is stage 3"

    }
}
    }
}