 boolean testStatus = true
pipeline{
    agent any
   
    stages{
        stage('BUILD'){
            steps{
                echo "compile and build"
            }
        }
         stage('TEST'){
            steps{
                script{
                try{
                    echo "execute the test"
                    sh 'sleep 5'
                    // sh 'exit 1'
                }
                   catch (Exception e){
                    echo "got an error"
                      echo "$e"
                      testStatus = false
                   } 
                }
         }
         }
                stage('DEPLOY'){
                     steps{
                        script{
                        if (testStatus == true ){
                            echo "deploy to production"
                        }
                          else{
                            echo "skip the deploy"
                          }
                        
                     }
                }
                }
                  stage('NOTIFY'){
                        steps{
                            script{
                        if (testStatus == false){
                            echo "notify me"
                        }
                         else{
                            echo "skip the notify"
                         }
                    }
            }
               post {
           always {
            echo "this will run always"
        }
           failure {
            echo "when the run failure"
           }
            sucess {
                echo "when the run success"
                  }
         
    
    
    }
}
    }
}

