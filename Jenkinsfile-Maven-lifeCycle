pipeline{
 agent any 
  stages{
    stage('checkout'){
          steps{
           checkout scmGit(branches: [[name: '*/main']], 
        extensions: [], userRemoteConfigs : [[credentialsId: 'git-id', 
        url: 'https://github.com/Akash923-ops/java_app.git']])
              
          }
    }
       stage('unit test'){
          steps{
              sh 'mvn test'
          }
       }
          stage('package'){
            steps{
                 sh 'mvn build war file'
            }
          }
          stage('integration testing'){
              steps{
                 sh 'mvn integration test'
              }
          }
            stage('load test'){
                steps{
                      sh 'mvn verify'
                }
            }
               

  }
 }
