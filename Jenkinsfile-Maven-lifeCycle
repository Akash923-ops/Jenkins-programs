pipeline{
 agent any 
  stages{
    stage('checkout'){
          steps{
             checkout scmGit(branches: [[name: '*/main']], 
        extensions: [], userRemoteConfigs : [[credentialsId: 'git-id', 
        url: 'https://github.com/Akash923-ops/maven.git']])
              
          }
    }
       stage('unit test'){
          steps{
              sh 'mvn test'
          }
       }
          stage('integration test'){
              steps{
                 sh 'mvn integration test'
              }
          }
            stage('load test'){
                steps{
                      sh 'mvn verify'
                }
            }
               

  }
 }
